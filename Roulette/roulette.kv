<NumberButton@Button>:
    background_color: [1,0,0,1] if self.text in ['1', '3', '5', '7', '9', '12', '14', '16', '18', '19', '21', '23','25', '27', '30', '32', '34', '36'] else [0,0,0,1]
    
<BetButton@Button>:
    font_size: 20

<RouletteGame>:
    id: Roulette
    display0: cagnotte
    display1: info
    display2: mise
    rows: 7
    padding: 5
    spacing: 5

    # where stuff is displayed
    BoxLayout:
        Label:
            text: 'Cagnotte :'
        TextInput:
            id: cagnotte
            font_size: 20
            multiline: False
    BoxLayout:
        Label:
            text: 'Info Pari vs Gain :'
        TextInput:
            id: info
            font_size: 20
            multiline: True

    # first row of number buttons
